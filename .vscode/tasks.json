{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project (GCC)",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/menu/*.c",
                "${workspaceFolder}/ordenacao/*.c",
                "${workspaceFolder}/utils/*.c",
                "-I",
                "${workspaceFolder}",
                "-o",
                "${workspaceFolder}/programa",
                "-g"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila o projeto estrutura_dados."
        }
    ]
}